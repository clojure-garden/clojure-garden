{
  "name": "@garden.clojure/frontend",
  "scripts": {
    "webpack:watch": "npx cross-env NODE_ENV=development npx webpack --watch --config ./webpack/webpack.config.js",
    "webpack:build": "npx cross-env NODE_ENV=production npx webpack --config ./webpack/webpack.config.js",
    "antd:prepare": "npx babel ./node_modules/antd/es --out-dir ./node_modules/antd/es",
    "cache:clean": "rm -rf .cpcache .shadow-cljs target",
    "assets:clean": "npm run cache:clean && rm -rf ./public/assets ./public/test",
    "assets:watch": "npm run antd:prepare && npm run webpack:watch",
    "assets:build": "npm run assets:clean && npm run antd:prepare && npm run webpack:build",
    "shadow:watch": "npx shadow-cljs watch app test",
    "shadow:build": "npx shadow-cljs release app",
    "test:build": "npx shadow-cljs compile ci",
    "test:run": "npx karma start karma.config.js --single-run",
    "clean": "npm run assets:clean",
    "repl": "concurrently --kill-others --names \"assets,shadow\" \"npm run assets:watch\" \"npm run shadow:watch\"",
    "test": "npm run assets:build && npm run test:build && npm run test:run",
    "build": "npm run assets:build && npm run shadow:build",
    "dist": "rm -rf ./dist && mkdir -p ./dist && cp -R ./public/* ./dist",
    "dist:serve": "npx http-server ./dist -p 3000 --cors",
    "outdated": "clojure -M:nop:outdated && npx ncu",
    "outdated:upgrade": "clojure -M:nop:outdated:outdated/upgrade && npx ncu -u && npm ci",
    "setup": "npm ci"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "antd-dayjs-webpack-plugin": "^1.0.6",
    "autoprefixer": "^10.4.2",
    "babel-plugin-transform-imports": "^2.0.0",
    "concurrently": "^7.0.0",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.3.1",
    "cssnano": "^5.0.15",
    "highlight.js": "11.4.0",
    "http-server": "^14.1.0",
    "karma": "^6.3.10",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cljs-test": "^0.1.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "less-plugin-clean-css": "^1.5.1",
    "mini-css-extract-plugin": "^2.4.6",
    "npm-check-updates": "^12.1.0",
    "prettier": "^2.5.1",
    "shadow-cljs": "^2.16.12",
    "source-map-loader": "^3.0.1",
    "style-loader": "^3.3.1",
    "sugarcss": "^1.0.3",
    "svgo-loader": "^3.0.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "antd": "^4.18.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
